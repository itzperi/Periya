            {
              "id": "check-days",
              "leftValue": "={{ Math.floor(($now.toMillis() - new Date($json['Last Contact']).getTime()) / (1000 * 60 * 60 * 24)) }}",
              "rightValue": "1",
              "operator": {
                "type": "number",
                "operation": "gte"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
