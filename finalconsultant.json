{
  "name": "Apollo Google Maps Email Outreach & Follow-up",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 9 * * *"
            }
          ]
        }
      },
      "id": "schedule-trigger",
      "name": "Schedule Trigger",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "url": "https://api.apollo.io/v1/mixed_people/search",
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "apolloApi",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendQuery": true,
        "queryParameters": {
          "parameters": [
            {
              "name": "api_key",
              "value": "={{$credentials.apiKey}}"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"q_organization_locations\": [\"United States\"],\n  \"page\": 1,\n  \"per_page\": 50,\n  \"person_titles\": [\"CEO\", \"Founder\", \"Owner\", \"Director\"],\n  \"organization_num_employees_ranges\": [\"1,10\", \"11,50\"]\n}",
        "options": {}
      },
      "id": "apollo-search",
      "name": "Apollo Search US Leads",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [450, 300]
    },
    {
      "parameters": {
        "authentication": "oAuth2",
        "operation": "append",
        "documentId": {
          "__rl": true,
          "value": "YOUR_GOOGLE_SHEET_ID",
          "mode": "id"
        },
        "sheetName": {
          "__rl": true,
          "value": "Sheet1",
          "mode": "name"
        },
        "columns": {
          "mappingMode": "defineBelow",
          "value": {
            "Name": "={{ $json.name }}",
            "Email": "={{ $json.email }}",
            "Company": "={{ $json.organization_name }}",
            "Title": "={{ $json.title }}",
            "Status": "Initial Email Sent",
            "First Contact": "={{ $now.toISO() }}",
            "Last Contact": "={{ $now.toISO() }}",
            "Follow-up Count": "0",
            "Reply Status": "No Reply"
          }
        },
        "options": {}
      },
      "id": "add-to-sheet",
      "name": "Add to Google Sheet",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 4,
      "position": [650, 300]
    },
    {
      "parameters": {
        "fromEmail": "your-email@domain.com",
        "toEmail": "={{ $json.email }}",
        "subject": "Quick Question About {{ $json.organization_name }}",
        "emailType": "html",
        "message": "=Hi {{ $json.first_name }},\n\nI noticed {{ $json.organization_name }} and wanted to reach out.\n\n[Your value proposition here - customize this template]\n\nWould you be open to a quick 15-minute call this week?\n\nBest regards,\n[Your Name]",
        "options": {}
      },
      "id": "send-initial-email",
      "name": "Send Initial Outreach",
